<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiashu.zhihudemo" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".app.ZHApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".presenter.activity.MainActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name=".presenter.activity.QuizActivity"
            android:label="@string/title_activity_quiz" >
        </activity>
        <activity
            android:name=".presenter.activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presenter.activity.AnswerActivity"
            android:label="@string/title_activity_answer" >
        </activity>
        <activity
            android:name=".presenter.activity.ArticleActivity"
            android:label="@string/title_activity_article" >
        </activity>
        <activity
            android:name=".presenter.activity.FrameActivity"
            android:label="@string/title_activity_frame" >
        </activity>
    </application>

</manifest>
