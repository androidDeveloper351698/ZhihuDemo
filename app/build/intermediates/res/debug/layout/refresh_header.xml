<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_ptr"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginBottom="-3dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/pull_to_refresh_pull_label"
        android:textColor="@android:color/white"
        android:background="?attr/colorPrimary"
        />
    <fr.castorflex.android.smoothprogressbar.SmoothProgressBar
        android:id="@+id/spb_ptr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ptr"
        android:indeterminate="true"
        app:spb_sections_count="3"
        app:spb_color="#ffd3a6e7"
        app:spb_speed="1.0"
        app:spb_interpolator="spb_interpolator_acceleratedecelerate"
        app:spb_stroke_width="4dp"
        app:spb_stroke_separator_length="6dp"
        app:spb_reversed="true"
        app:spb_mirror_mode="true"
        app:spb_progressiveStart_activated="true"
        app:spb_progressiveStart_speed="1.5"
        app:spb_progressiveStop_speed="3.4"
        />

